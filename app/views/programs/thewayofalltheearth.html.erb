<div class='program-container'>

  <%= render "shared/header" %>

  <section class='program-background'>
    <section class='program-background-film'>
    </section>
  </section>

  <section class='program-box-container'>
    <section class='program-box'>

      <%= react_component 'ProgramInfoBox', { program: @program, teacher: @teacher} %>

      <section style="width: 100%; border-bottom: 1px solid rgb(55, 63, 78); margin-bottom: 48px;">
        <section style="transform: translateY(50%); max-width: 220px; margin: 0px auto;">
          <button style="display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: 100; font-family: &quot;Avenir Book&quot;, Avenir, Helvetica, Arial, sans-serif; border-width: 0px; border-radius: 2px; padding: 8px; width: 100%; cursor: pointer; background-color: rgb(63, 192, 199); color: rgb(255, 255, 255);">
            <section style="width: 100%;">
              <section style="margin: 0px auto;">
                <section style="display: flex; align-items: center; justify-content: center;">
                  <img src="/assets/play-arrow-2x.png" style="width: 24px; height: 24px; margin-left: -2px;">
                  <section style="font-size: 14px; font-weight: 200;">Begin</section>
                </section>
              </section>
            </section>
          </button>
        </section>
      </section>

      <section class='adventures-box'>
        <section class='adventures-box-title'>
          ADVENTURES
        </section>

        <%= react_component 'AdventuresList', { adventures: @tracks} %>

      </section>

    </section>
  </section>

</div>
